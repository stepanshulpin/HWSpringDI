<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="javaCollection" class="com.shulpin.model.JavaCollection">

        <constructor-arg>
            <list>
                <value>Potato</value>
                <value>Banana</value>
                <value>Tea</value>
            </list>
        </constructor-arg>

        <constructor-arg>
            <set>
                <value>Potato</value>
                <value>Banana</value>
                <value>Tea</value>
            </set>
        </constructor-arg>

        <constructor-arg>
            <map>
                <entry key = "1" value = "Potato"/>
                <entry key = "2" value = "Banana"/>
                <entry key = "3" value = "Tea"/>
            </map>
        </constructor-arg>


    </bean>

</beans>